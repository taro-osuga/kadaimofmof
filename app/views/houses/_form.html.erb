    <div class="field">
    <div>
      <%= s_f.label :root, "路線名"  %>
    </div>
    <div>
      <%= s_f.text_field :root %>
    </div>
    </div>
    <div class="field">
    <div>
      <%= s_f.label :st_name, "駅名"  %>
    </div>
    <div>
      <%= s_f.text_field :st_name %>
    </div>
    </div>
